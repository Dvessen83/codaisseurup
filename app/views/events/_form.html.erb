<%= form_for @event do |e| %>
  <div class="form-group">
    <label>Name</label>
    <%= e.text_field :name, placeholder: "Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Description</label>
    <%= e.text_area :description, rows: 5, placeholder: "Say something about your event", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Location</label>
    <%= e.text_field :location, placeholder: "Location", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Price</label>
    <%= e.number_field :price, placeholder: "Price", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Capacity</label>
    <%= e.number_field :capacity, placeholder: "Capacity", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= e.check_box :includes_drinks %> Drinks
  </div>

  <div class="form-group">
    <%= e.check_box :includes_food %> Food
  </div>


  <div class="form-group">
    Starts at <%= select_datetime Date.today, prefix: :starts_at %>
  </div>

  <div class="form-group">
    Ends at <%= select_datetime Date.today, prefix: :ends_at %>
  </div>

  <div class="form-group">
    <%= e.check_box :active %> Active
  </div>









  <div class="actions">
    <%= e.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
